{
    "name": "bots",
    "version": "0.0.1",
    "description": "",
    "author": "",
    "private": true,
    "license": "UNLICENSED",
    "scripts": {
        "quoter": "nest start quoter",
        "prebuild": "rimraf dist",
        "comp:dev": "docker compose -f docker-compose.dev.yml up",
        "deploy": ".\\deploy\\deploy.bat",
        "build:docker": "docker build -t bots .",
        "docker:deleteold": "docker rmi $(docker images --filter dangling=true | awk {'print $3'})",
        "build": "nest build",
        "build:all": "nest build & nest build craber & nest build poller & nest build responder & nest build ticker & nest build notion & nest build quoter",
        "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
        "start": "nest start",
        "start:alldebug": "concurrently \"nest start craber --debug --watch\" \"nest start poller --debug --watch\" \"nest start ticker --debug --watch\" \"nest start responder --debug --watch\" \"nest start notion --debug --watch\"",
        "start:dev": "nest start --watch",
        "start:debug": "nest start --debug --watch",
        "start:prod": "node dist/main",
        "start:allprod": "concurrently \"node dist/apps/craber/main\" \"node dist/apps/poller/main\" \"node dist/apps/ticker/main\" \"node dist/apps/responder/main\" \"node dist/apps/notion/main\" \"node dist/apps/quoter/main\"",
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "test:e2e": "jest --config ./apps/bots/test/jest-e2e.json"
    },
    "dependencies": {
        "@discord-nestjs/common": "^5.2.10",
        "@discord-nestjs/core": "^5.3.12",
        "@nestjs/common": "^10.3.0",
        "@nestjs/config": "^3.1.1",
        "@nestjs/core": "^10.3.0",
        "@nestjs/mongoose": "^10.0.2",
        "@nestjs/platform-express": "^10.3.0",
        "@nestjs/schedule": "^4.0.0",
        "@notionhq/client": "^2.2.1",
        "@types/cron": "^2.0.0",
        "axios": "^0.27.2",
        "cheerio": "^1.0.0-rc.12",
        "concurrently": "^7.4.0",
        "discord.js": "^14.14.1",
        "mongoose": "^6.6.5",
        "reflect-metadata": "^0.1.13",
        "request": "^2.88.2",
        "request-promise": "^4.2.6",
        "rimraf": "^3.0.2",
        "rxjs": "^7.2.0",
        "sharp": "^0.33.2",
        "vega": "^5.22.1",
        "yahoo-finance2": "^2.9.1"
    },
    "devDependencies": {
        "@nestjs/cli": "^10.2.1",
        "@nestjs/schematics": "^10.0.3",
        "@nestjs/testing": "^10.3.0",
        "@types/express": "^4.17.13",
        "@types/jest": "28.1.8",
        "@types/node": "^16.0.0",
        "@types/supertest": "^2.0.11",
        "@typescript-eslint/eslint-plugin": "^5.0.0",
        "@typescript-eslint/parser": "^5.0.0",
        "eslint": "^8.0.1",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-prettier": "^4.0.0",
        "jest": "28.1.3",
        "prettier": "^2.3.2",
        "source-map-support": "^0.5.20",
        "supertest": "^6.1.3",
        "ts-jest": "28.0.8",
        "ts-loader": "^9.2.3",
        "ts-node": "^10.0.0",
        "tsconfig-paths": "4.1.0",
        "typescript": "^4.7.4"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": ".",
        "testRegex": ".*\\.spec\\.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "collectCoverageFrom": [
            "**/*.(t|j)s"
        ],
        "coverageDirectory": "./coverage",
        "testEnvironment": "node",
        "roots": [
            "<rootDir>/apps/"
        ]
    }
}
